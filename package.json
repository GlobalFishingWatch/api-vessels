    "moment": "^2.22.2",
    "nodemon": "^1.18.6",
    "per-env": "^1.0.2",
    "pg": "^7.6.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "swagger-tools": "^0.10.1",
    "winston": "^3.0.0",
    "yamljs": "^0.3.0"
